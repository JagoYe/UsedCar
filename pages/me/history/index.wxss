/* pages/me/history/index.wxss */
page{
  font-family: 微软雅黑;
  font-size: 26rpx;
}
.all{
  width: 100%;
  height: 1rpx;
  background-color: gray;
}
/*二手车列表页*/
.list{
  width: 100%;
  height: 155rpx;
  margin-top: 30rpx;}
.listCars{
  width: 90%;
  height: 100%;
  border-bottom: 2rpx solid gray;}   
.listCar{
  width: 100%;
  height: 125rpx;}
.listCar .left{
  width: 30%;
  height: 125rpx;
  float: left;}
.listCar .left image{
  width: 100%;
  height: 100%;}          
.listCar .right{
  width: 68%;
  height: 125rpx;
  margin-left: 2%;
  float: left;}  
.listCar .right .details{
  width: 100%;
  height: 41rpx;
  line-height: 41rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;}