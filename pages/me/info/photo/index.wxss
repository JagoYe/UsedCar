/* pages/me/info/photo/index.wxss */
page{
  width: 100%;
  background-color: #F9F9F9;
  font-family: 微软雅黑;
  font-size: 28rpx;
}
.all{
  width: 85%;
  height: 1160rpx;
  overflow-y: auto;
}
.photo{
  width: 185rpx;
  height: 185rpx;
  position: relative;
  background-color: gainsboro;
  color: white;
  margin-left: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  font-size: 90rpx;
  float: left;
}
.photo image{
  width: 100%;
  height: 100%;
}
.delete{
  width: 40rpx;
  height: 40rpx;
  background-color: aquamarine;
  position: absolute;
  top: 0px;
  left: 145rpx;
  color: white;
  text-align: center;
  line-height: 34rpx;
  font-size: 25rpx;
}
.add{
  width: 185rpx;
  height: 185rpx;
  background-color: gainsboro;
  color: white;
  margin-left: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 170rpx;
  font-size: 90rpx;
  font-weight: 600;
  float: left;
}
.bottom{
  width: 100%;
  height: 85rpx;
  background-color: black;
  color: white;
  line-height: 85rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  letter-spacing: 3rpx;
}