/* 遮罩层 */
.mask{
  width: 100%;
  height: 100%;
  background-color: black;
  position: absolute;
  z-index: 11;
  top: 0;
  display: none;
  opacity: 0.4;
}
/* 提示块 */
.prompt{
  width: 70%;
  height: 300rpx;
  background-color: white;
  position: absolute;
  z-index: 12;
  top: 30%;
  left: 15%;
  border-radius: 12rpx;
  display: none;
}
.info{
  width: 100%;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-top: 100rpx;
}
.promptTime{
  width: 100%;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
}

.show{
  display: block;
}
.reveal{
  display: block;
}