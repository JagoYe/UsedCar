<!--pages/used/used_list/index.wxml-->
<!-- 整个页面 -->
<view class='all'>
  <!-- 搜索 -->
  <view class='nav center'>
    <picker bindchange="clickCity" value="{{cityIndex}}" range="{{citys}}">
      <!-- 地址图标 -->
      <view class='locationIcon'>
        <image src='../../../img/2.png'></image>
      </view>
      <!-- 地址 -->
      <view class='area'>
        <text>{{city_name}}</text>
      </view>
    </picker> 
    <!-- 搜索框 -->
    <view class='search'>
      <picker bindchange="bindPickerChange" value="{{areaIndex}}" range="{{area}}">  
        <view class="picker">  
          <text>当前选择 → {{area[areaIndex]}}</text>  
        </view>  
      </picker>  
    </view>
  </view>
  <!-- 条件搜索栏目 -->
  <view class='condition'>
    <view style='float:left;width:100%;height:70rpx'>
      <view class='navs center'>
        <view class='left {{color}}' bindtap='tabChange' data-active='1' data-display='{{display}}'>
          <view class='conditions'><text>默认排序</text></view>
          <image class='img {{color}}' src='../../../img/18.png'></image>
        </view>
        <view class='middle {{color}}' bindtap='clickBrand'>
          <view class='conditions'><text>品牌选择</text></view>
          <image class='img {{color}}' src='../../../img/18.png'></image>
        </view>
        <view class='right {{color}}' data-display='{{display}}' data-active='3' bindtap='tabChange'>
          <view class='conditions'><text>价格区间</text></view>
          <image class='img {{color}}' src='../../../img/18.png'></image>
        </view>
      </view>
    </view>

    <!-- 定位块 -->
    <view class='position'>
      <!--排序选择块定位-->
      <view class='sort {{searchStyle}}'>
        <view class='middle center'>
          <view class='content'><text>默认排序</text></view>
          <view class='content'><text>价格最低</text></view>
          <view class='content'><text>价格最高</text></view>
          <view class='content'><text>年车最短</text></view>
          <view class='content'><text>里程最少</text></view>
          <view class='content'><text>最新发布</text></view>
        </view>
      </view>
      <!-- 价格区间块定位 -->
      <view class='price {{searchStyle}}'>
        <view class='block center'>
            <view class='entry-ctn'>
              <view class='entry'>
                <view><text>不限</text></view>
              </view>
              <view class='entry'>
                <view><text>3万以上</text></view>
              </view>
              <view class='entry'>
                <view><text>3-5万</text></view>
              </view>
            </view>
            <view class='entry-ctn'>
              <view class='entry'>
                <view><text>5-10万</text></view>
              </view>
              <view class='entry'>
                <view><text>10-15万</text></view>
              </view>
              <view class='entry'>
                <view><text>15-20万</text></view>
              </view>
            </view>
            <view class='entry-ctn'>
              <view class='entry'>
                <view><text>20-25万</text></view>
              </view>
              <view class='entry'>
                <view><text>25-30万</text></view>
              </view>
              <view class='entry'>
                <view><text>30万以上</text></view>
              </view>
            </view>
        </view><!--block结束-->
      </view>
    </view>

  </view>
  <!--列表页-->
  <view class='listPage'>
    <!-- 二手车列表页 -->
    <block  wx:key="" wx:for="{{usedCar}}" wx:for-item="item">
      <view class='list' bindtap='clickJump' data-usedcar='{{item}}'>
        <view class='listCar center'>
          <view class='left'>
            <image src='{{webSite}}{{item.first_image}}'></image>
          </view>
          <view class='right'>
            <view class='details'><text>{{item.brand_name}}{{item.style_name}}{{item.detail}}</text></view>
            <view class='details color-gray'><text>{{item.city_name}}/{{item.spec}}年/{{item.mileage}}万公里</text></view>
            <view class='details'><text>24.80万</text></view>
          </view>
        </view>
      </view>
    </block>
  </view>
  <!-- 遮罩层 -->
    <view class='mask {{show}}'></view>
</view>
