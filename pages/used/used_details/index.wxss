/* pages/used/used_details/index.wxss */
page{
  width: 100%;
  height: 100%;
  font-family: 微软雅黑;
  font-size: 26rpx;
  background-color: #F2F2F2;
}
.all{
  width: 100%;
  height: auto;
  background-color: white;
  padding-bottom: 30rpx;
}
/* 汽车款式描述 */
.depict{
  width: 90%;
  height: 90rpx;
  margin-top: 30rpx;
}
.upper{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: 400;
  font-size: 28rpx;
}
.lower{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}
/*二手车参考价格*/
.price{
  width: 90%;
  height: 90rpx;
  margin-top: 10rpx;
}
.left{
  width: 29%;
  height: 60rpx;
  margin-top: 15rpx;
  font-size: 50rpx;
  line-height: 60rpx;
  float: left;
  border-right: 2rpx solid black;
}
.right{
  width: 70%;
  height: 100%;
  float: left;
}
/*参考价格*/
.reference{
  width: 95%;
  line-height: 45rpx;
  margin-left: 5%;
  height: 45rpx;
}
.total{
  width: 95%;
  line-height: 45rpx;
  margin-left: 5%;
  height: 45rpx;
}
/*车辆档案*/
.archives{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background-color: white;
}
.archivesTop{
  width: 90%;
  height: 70rpx;
  letter-spacing: 3rpx;  
}
.archivesIcon{
  width: 10%;
  height: 70rpx;
  float: left;
  text-align: center;
}
.archivesIcon image{
  width: 35rpx;
  height: 30rpx;
  margin-top: 20rpx;
}
.archivesText{
  width: auto;
  font-size: 28rpx;
  height: 70rpx;
  float: left;
  line-height: 70rpx;
}
/* 车辆详情 */
.detailsCar{
  width: 87%;
  height: auto;
  margin-left: 13%;
  background-color: white;
}
.middle{
  width: 100%;
  height: 160rpx;
  margin-top: 30rpx;
  padding-bottom:30rpx; 
}
.subset{
  width: 170rpx;
  height: 160rpx;
  float: left;
  margin-left: 50rpx;
}
.margin{
  margin: 0;
}
.img{
  width: 100rpx;
  height: 100rpx;
  margin-left: 35rpx;
  text-align: center;
}
.img image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
}
.text{
  width: 100%;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 24rpx;
}
/*上架时间*/
.time{
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  border-top: 2rpx solid gainsboro;
}
.times{
  width: auto;
  line-height: 60rpx;
  float: left;
}
.date{
  width: auto;
  line-height: 60rpx;
  float: right;
  margin-right: 10%;
}
/*启动钥匙块*/
.key{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}
/*底部*/
.bottom{
  width: 100%;
  height: 85rpx;
  background-color: orange;
  position: fixed;
  bottom: 0px;
}
/*车源*/
.source{
  width: 30%;
  height: 85rpx;
  line-height: 85rpx;
  background-color: white;
  float: left;
  text-align: center;
  letter-spacing: 3rpx;
}
.phone{
  width: 70%;
  height: 85rpx;
  line-height: 85rpx;
  background-color: black;
  float: left;
  text-align: center;
  color: white;
  letter-spacing: 3rpx;
}