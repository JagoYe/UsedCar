/* pages/used/used_details/index.wxss */
page{
  width: 100%;
  height: 100%;
  font-family: 微软雅黑;
  font-size: 26rpx;
  background-color: #F2F2F2;
}
/*页数显示*/
.subscript{
  width: 70rpx;
  height: 70rpx;
  background-color: #00546C;
  color: white;
  text-align: center;
  line-height: 70rpx;
  font-size: 25rpx;
  position: absolute;
  top: 220rpx;
  right: 1%;
  border-radius:64rpx; 
}
/* 整个页面 */
.whole{
  width: 100%;
  height: 100%;
}
.all{
  width: 100%;
  height: auto;
  background-color: white;
  padding-bottom: 30rpx;
}
/* 汽车款式描述 */
.depict{
  width: 90%;
  height: 90rpx;
  margin-top: 30rpx;
}
.upper{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: 400;
  font-size: 28rpx;
}
.lower{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}
/*二手车参考价格*/
.price{
  width: 90%;
  height: 90rpx;
  margin-top: 10rpx;
}
.left{
  width: auto;
  color: #FFB700;
  padding-right: 30rpx;
  height: 60rpx;
  margin-top: 15rpx;
  font-size: 50rpx;
  line-height: 60rpx;
  float: left;
  border-right: 2rpx solid black;
}
.right{
  width: auto;
  height: 100%;
  float: left;
  line-height: 90rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
}
/*车辆档案*/
.archives{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background-color: white;
}
.archivesTop{
  width: 90%;
  height: 70rpx;
  letter-spacing: 3rpx;  
}
.archivesIcon{
  width: 10%;
  height: 70rpx;
  float: left;
  text-align: center;
}
.archivesIcon image{
  width: 40rpx;
  height: 35rpx;
  margin-top: 18rpx;
}
.archivesText{
  width: auto;
  font-size: 28rpx;
  height: 70rpx;
  float: left;
  line-height: 70rpx;
}
/* 车辆详情 */
.detailsCar{
  width: 87%;
  height: auto;
  margin-left: 13%;
  background-color: white;
  padding-bottom: 50rpx;
}
.middle{
  width: 100%;
  height: 160rpx;
  margin-top: 30rpx;
  padding-bottom:30rpx; 
}
.subset{
  width: 170rpx;
  height: 160rpx;
  float: left;
  margin-left: 62rpx;
}
.margin{
  margin: 0;
}
.img{
  width: 100rpx;
  height: 100rpx;
  margin-left: 35rpx;
  text-align: center;
}
.img image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
}
.text{
  width: 100%;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 24rpx;
}
/*上架时间*/
.time{
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  border-top: 2rpx solid gainsboro;
}
.times{
  width: auto;
  line-height: 60rpx;
  float: left;
}
.date{
  width: auto;
  line-height: 60rpx;
  float: right;
  margin-right: 10%;
}
/*启动钥匙块*/
.key{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}
/*底部*/
.bottom{
  width: 100%;
  height: 85rpx;
  position: fixed;
  bottom: 0px; 
}
/*车源*/
.source{
  width: 30%;
  height: 84rpx;
  line-height: 84rpx;
  background-color: white;
  border-top:solid #FFB700 1rpx;
  float: left;
  text-align: center;
  letter-spacing: 3rpx;
}
.phone{
  width: 70%;
  height: 85rpx;
  line-height: 85rpx;
  float: left;
  text-align: center;
  color: white;
  letter-spacing: 3rpx;
}
 .mobilePhone{
  width: 100%;
  height: 171rpx;
  position: absolute;
  top: 0px;
  z-index: 3;
  transition: all 0.3s ease-in-out;
}
.mobilePhone .phones{
  width: 100%;
  background-color: white;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
} 
.mobilePhone .call{
  width: 100%;
  background-color: white;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
}
.gradient{
  height: 1rpx;
  width: 80%;
  background-color: white;
  background: linear-gradient(to right,white,gray,white);
}
.show{
  top:-168rpx;
}

/* 遮罩层 */
.mask{
  width: 0;
  height: 172%;
  position: absolute;
  background-color: black;
  top: 0;
  z-index: 0;
  opacity: 0.4;
}
/*添加样式*/
.masks{
  width: 100%;
}
/* 时间弹出显示块 */
.confirm{
  width: 50%;
  height:300rpx;
  background-color: white;
  position: fixed;
  top: 380rpx;
  left: 25%;
  border-radius: 12rpx;
  display: none;
}
.reveal{
  display: block;
}
.success{
  width: 100%;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-top: 100rpx;
}
.jump{
  width: 100%;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
}