/**index.wxss**/
/*整个网页*/
page{
  font-family: 微软雅黑;
  font-size: 26rpx;
  background-color: #F2F2F2;
}
/* 居中 */
.center{
  margin: 0rpx auto;}
.all{
  width: 100%;
  height: auto;
  background-color: white;}
/* 轮播图   */
.carousel{
  width: 100%;
  height: 300rpx;
  position: relative;}
.carousel image{
  width: 100%;
  height: 100%;}
/*车辆崭新显示*/
.usedCar{
  width: 50%;
  height: 100rpx;
  position: absolute;
  left: 25%;
  top: 100rpx;
  background-color: red;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  letter-spacing: 4rpx;
  color: white;
  display: none;
}   
/*搜索*/
.nav{
  width: 90%;
  height: 50rpx;
  background-color: white;
  margin-top: 15rpx;}
/*地区*/
.area{
  width: 20%;
  height: 50rpx;
  float: left;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 50rpx;}
/*定位图标*/
.locationIcon{
  width: 6%;
  height: 50rpx;
  float: left;}
.locationIcon image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;}  
/*搜索框*/
.search{
  width: 74%;
  height: 50rpx;
  float: left;
  box-sizing: border-box;
  border: 1rpx solid gray;
  border-radius: 12rpx;
  line-height: 48rpx;
  padding-left: 10rpx;}
/*按条件查询车辆*/
.total{
  width: 90%;
  height: auto;
  background-color: red;
  margin-top: 30rpx;}
.total .type{
  width: 25%;
  height: 150rpx;
  float: left;}
/*品牌*/
.block{width: 100%; height: 100%;}
/*标志*/
.picture{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;}
