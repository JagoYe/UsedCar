/**index.wxss**/
/*整个网页*/
page{
  font-family: 微软雅黑;
  font-size: 28rpx;
  background-color: #F2F2F2;
}
/* 居中 */
.center{
  margin: 0rpx auto;}
.all{
  width: 100%;
  height: auto;
  background-color: white;}
/* 轮播图   */
.carousel{
  width: 100%;
  height: 300rpx;}
.carousel image{
  width: 100%;
  height: 100%;}
/*搜索*/
.nav{
  width: 90%;
  height: 50rpx;
  background-color: white;
  margin-top: 15rpx;}
/*地区*/
.area{
  width: 20%;
  height: 50rpx;
  float: left;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 50rpx;}
/*定位图标*/
.locationIcon{
  width: 6%;
  height: 50rpx;
  float: left;}
.locationIcon image{
  width: 22rpx;
  height: 32rpx;
  margin-top: 9rpx;}  
/*搜索框*/
.search{
  width: 64%;
  height: 50rpx;
  float: left;
  box-sizing: border-box;
  border: 1rpx solid gray;
  border-radius: 12rpx;}
.search input{
  width: 100%;
   height: 50rpx; 
  line-height: 50rpx;}  
/*搜索图标*/
.searchIcon{
  width: 10%;
  height: 50rpx;
  float: left;}
.searchIcon image{
  width: 34rpx;
  height: 38rpx;
  margin-top: 6rpx;
  margin-left: 10rpx;}  
/*按条件查询车辆*/
.total{
  width: 90%;
  height: auto;
  background-color: red;
  margin-top: 30rpx;}
.total .type{
  width: 25%;
  height: 150rpx;
  float: left;}
/*品牌*/
.block{width: 100%; height: 100%;}
/*标志*/
.picture{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;}
