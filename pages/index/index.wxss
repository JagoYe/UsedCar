.total .price{
  width: 25%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  float: left;} 
/*查询车源按钮*/                
.query{
  width: 80%;
  height: 80rpx;
  clear: both;
}
.query button{
  width: 100%;
  letter-spacing: 3rpx;
  line-height: 80rpx;
  background-color: orange;
  color: white;
  font-size: 28rpx;}
/* 车源收藏*/
.collection{
  width: 80%;
  height: 60rpx;
  border-top: 4rpx solid #999;
  margin-top: 25rpx;}
.collections{
  width: 80%;
  height: 60rpx;}
.house{
  width: 50%;
  height: 60rpx;
  float: left;}
.houseIcon{
  width: 30%;
  height: 60rpx;
  float: left;
  text-align: center;}
.houseIcon image{
  width: 50%;
  height: 50%;
  margin-top: 15rpx;}    
.house .content{
  width: auto;
  height: 60rpx;
  float: left;
  line-height: 60rpx;
  color: #FF7952;}  

.history{
  width: 50%;
  height: 60rpx;
  float: left;}      
.historyIcon{
  width: 30%;
  height: 60rpx;
  float: left;
  text-align: center;}
.historyIcon image{
  width: 50%;
  height: 60%;
  margin-top: 12rpx;}    
.history .content{
  width: auto;
  height: 60rpx;
  float: left;
  line-height: 60rpx;
  color: #FF7952;} 

/*热门推荐二手车列表页*/   
.recommend{
  width: 100%;
  height: auto;
  background-color: white;
  margin-top: 25rpx;
}
/* 热门推荐 */
.hot{
  width: 100%;
  height: 80rpx;
  border-bottom: 4rpx solid gray;}
.hots{
  width: 90%;
  height: 100%;}
.hotsIcon{
  width: 10%;
  height: 100%;
  float: left;
  text-align: center;}
.hotsIcon image{
  width: 50%;
  height: 58%;
  margin-top: 16.5rpx;}   
.hotsContent{
  width: auto;
  height: 100%;
  float: left;
  line-height: 80rpx;}  
/*二手车列表页*/
.list{
  width: 100%;
  height: 150rpx;
  margin-top: 25rpx;
  border-bottom: 2rpx solid gray;} 
.listCar{
  width: 90%;
  height: 125rpx;}
.listCar .left{
  width: 30%;
  height: 125rpx;
  float: left;}
.listCar .left image{
  width: 100%;
  height: 100%;}          
.listCar .right{
  width: 68%;
  height: 125rpx;
  margin-left: 2%;
  float: left;}  
.listCar .right .details{
  width: 100%;
  height: 41rpx;
  line-height: 41rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;}