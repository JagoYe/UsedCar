/* pages/me/phone_update/index.wxss */
page{
  font-size: 28rpx;
  font-family: 微软雅黑;
  overflow: hidden;
  height: 100%;
}
.all{
  width: 100%;
  height: 100%;
  position: relative;
  top: 0;
  left: 0;
}
.all image{
  width: 100%;
  height: 100%;
}
.containerd{
  width: 100%;
  height: auto;
  position: absolute;
  top: 250rpx;
}
.containerd .box{
  width: 80%;
  height: auto;
  margin: 0px auto;
}
.containerd .box .inputs{
  width: 99%;
  height: 84rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  border: 1px solid white;
  box-sizing: border-box;
  color: white;
}
/*手机号*/
.containerd .box .inputs .phone{
  width: 90%;
  margin-left: 10%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
}
/*验证码*/
.containerd .box .inputs .code{
  width: 55%;
   margin-left: 10%; 
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
}
/*验证码按钮*/
.containerd .box .inputs .codes{
  width: 34%;
  height: 80%;
  line-height: 64rpx;
  float: right;
  margin-top: 1.5%;
  margin-right: 1%;
  font-size: 24rpx;
  box-sizing: border-box;
  letter-spacing: 3rpx;
}
.containerd .box .inputs button{
  width: 100%;
  line-height: 80rpx;
  border-radius: 20rpx;
  color: white;
  background-color: #3AB3FF;
  border: 0px;
  box-shadow: 0px 2rpx 1rpx gray;
  font-size: 30rpx;
}
#border{
  border: 0px;
  border-radius: 20rpx;
}
.color{color: white;}
.model1{width:100%;position:absolute;top:0;bottom:0;left:0;right:0;background:#000;opacity:0.4;z-index: 4;}
.shows{width: 100%;position: absolute;top:25%;z-index: 10;}
.show{width:600rpx;height: 250rpx;background: #fff;margin: 0px auto;border-radius: 8px;display: flex;text-align: center;color:#ff8300;display: none;line-height: 250rpx; padding-top:30px;box-shadow: 0px 2px 1px #777;}
.on{display: block;}
.show text{display:block;height:30px;line-height: 30px;color:#3ab3ff;}
.codess{display: none;}
.none{display: none;}