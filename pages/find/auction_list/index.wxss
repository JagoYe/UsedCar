.listCar .left .detail{
  width: 100%;
  height: 37rpx;
  line-height: 37rpx;
  overflow: hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;  
}
.timeshow{
  width: 100%;
  height: 50rpx;
  border-radius: 24rpx;
  text-align: center;
  color: white;
  line-height: 50rpx;
  font-size: 23rpx;
}
.listCar .middle{
  width: 30%;
  height: 100%;
  float: left;
}
.img{
  width: 100%;
  height: 110rpx;
}
.starting{
  width: 100%;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
}
.img image{
  width: 84%;
  margin-left: 8%;
  height: 100%;
  border-radius: 42rpx;
}
.listCar .right{
  width: 35%;
  height: 100%;
  float: left;
}  
/*热搜提示*/
.search{
  width: 100%;
  height: 70rpx;
  box-shadow: 0rpx 5rpx 4rpx gray;
}
.hotsearch{
  width: 90%;
  height: 70rpx; 
}
.leftIcon{
  width: 70rpx;
  height: 70rpx;
  float: left;
  text-align: center;
}
.leftIcon image{
  width: 48rpx;
  height: 50rpx;
  margin-top: 10rpx;
}
.righttext{
  width: 500rpx;
  height: 70rpx;
  float: left;
  line-height: 70rpx;
}
.main{
  width: 100%;
  height: 780rpx;
  overflow-y: auto;
}
.price{
  width: 100%;
  height: 54rpx;
}
.price .classify{
  width: 58%;
  height: 53rpx;
  float: left;
  line-height: 53rpx;
  text-align: right;
}
.price .pricedisplay{
  width: 42%;
  height: 53rpx;
  float: left;
  line-height: 53rpx;
  text-align: right;
}