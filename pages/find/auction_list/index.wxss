/* pages/find/carWash_details/index.wxss */
page{
  width: 100%;
  height: 100%;
  font-family: 微软雅黑;
  font-size: 26rpx;
}
/*大容器*/
.all{
  width: 100%;
  height: auto;
}
/*头部快*/
.header{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.header image{
  width: 100%;
  height: 100%;
}
.title{
  width: 90%;
  height: 100%;
  line-height: 300rpx;
  position: absolute;
  top: 0;
  left: 5%;
  font-size: 30rpx;
  color: white;
  display: none;
}

/*二手车洗车列表页*/
.list{
  width: 100%;
  height: 185rpx;
  margin-top: 25rpx;
  border-bottom: 2rpx solid gray;
  font-size: 24rpx;} 
.listCar{
  width: 90%;
  height: 160rpx;}
.listCar .left{
  width: 35%;
  height: 100%;
  float: left;
}
.listCar .left .brand{
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
